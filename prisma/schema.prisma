generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}



model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  name     String?
  mobile   String
  password String
  role     String  @default("user")
}




model Product {
  sr_no       Int     @id @default(autoincrement())
  id          String    @unique
  title       String
  description String?
  price       String
  category    String
  image       String?
  file_path   String?
  status      String   @default("active")
  created_at  DateTime @default(now())

  orders         Order[]
}




model Order {
  sr_no       Int        @id @default(autoincrement())
  id          String     @unique 
  user_id     String
  amount       String
  product_id  String
  payment_id  String?   // Razorpay / UPI / custom payment reference
  download_allow Boolean   @default(false)
  status      String    @default("WAITING_FOR_ADMIN_APPROVAL")
  created_at  DateTime  @default(now())

  product       Product  @relation(fields: [product_id], references: [id])

}




model Download {
  id             String   @unique
  user_id        Int
  product_id     Int
  download_time  DateTime @default(now())
}

model Category {
  id           String   @unique
  name         String
  slug         String
  image        String
  createdAt   DateTime @default(now())
}



model SiteSetting {
  id              Int      @id @default(1)
  siteName        String
  siteLogoUrl     String
  heroTitle       String
  heroSubtitle    String
  metaDescription String
  business_address  String  
  contact_number   String?
  contact_email   String?
  updatedAt       DateTime @updatedAt
}



